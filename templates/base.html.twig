{% from 'Macros/alerts.html.twig' import error %}
{% from 'Macros/alerts.html.twig' import success %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Desafio{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="stylesheet/less" type="text/css" href="{{ asset('css/main.less') }}" />
        {% endblock %}

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/less@4" ></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% endblock %}
    </head>

    <body>
        <div id="header">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Treinamento Contábil</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link {% if typePage == 'index' %}active{% endif %}" href="{{ path('index') }}">Início</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if typePage == 'people' %}active{% endif %}" href="{{ path('people_list') }}">Pessoas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if typePage == 'room' %}active{% endif %}" href="{{ path('room_list') }}">Salas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if typePage == 'cafeteria' %}active{% endif %}" href="{{ path('cafeteria_list') }}">Espaços de Café</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>

        <div id="body" class="container">
            {% for message in app.session.flashbag.get('error') %}
                {{ error(message) }}
            {% endfor %}
            {% for message in app.session.flashbag.get('success') %}
                {{ success(message) }}
            {% endfor %}
            {% block body %}{% endblock %}
        </div>

        <div id="footer">
            <p>&copy; Sistema de Treinamento</p>
        </div>
    </body>
</html>
