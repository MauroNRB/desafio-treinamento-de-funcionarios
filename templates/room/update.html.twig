{% extends 'base.html.twig' %}

{% import 'Macros/buttons.html.twig' as buttons %}
{% from 'Macros/actions.html.twig' import update %}

{% block title %}Atualizar Sala{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <div class="float-right">
            {{ buttons.show(path('index'), 'Voltar') }}
        </div>
        <br />
        <div class="form-container">
            <h1 class="text-center mb-4">Atualizar de Sala</h1>
            {{ form_start(form, {'id': entity.id}) }}
                <input type="hidden" name="_method" value="PUT">
                {{ form_errors(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.capacity) }}
                {{ update() }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

