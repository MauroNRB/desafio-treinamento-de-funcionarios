{% extends 'base.html.twig' %}

{% from 'room/macros.html.twig' import list %}
{% import 'Macros/buttons.html.twig' as buttons %}

{% block title %}Pessoas{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <h1>Listagem de Pessoas</h1>
        <div class="float-right">
            {{ buttons.show(path('index'), 'Voltar') }}
            {{ buttons.create(path('room_create'), 'Cadastrar') }}
        </div>
        <br />
        <div style="margin-top: 30px;">
            {{ list(entities) }}
        </div>
    </div>
{% endblock %}
